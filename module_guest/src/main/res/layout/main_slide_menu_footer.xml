<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingBottom="@dimen/normal_padding_margin"
    android:id="@+id/left_menu_logo"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <TextView
        android:paddingLeft="@dimen/normal_padding_margin"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/powered_by"
        android:textColor="@android:color/black"
        android:textSize="5sp" />

    <ImageView
        android:layout_marginLeft="@dimen/normal_padding_margin"
        android:layout_width="27dp"
        android:layout_height="9dp"
        app:srcCompat="@drawable/image_nextx_logo" />
</LinearLayout>