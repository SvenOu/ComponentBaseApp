<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/icon_fanta"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/normal_text_padding"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/image_fanta_logo"/>

    <TextView
        android:id="@+id/menu_title"
        style="@style/TEXT.TEXT_RED.COLOR_DEFAULT.FONT_FAMILY_1.F9"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/normal_text_padding"
        android:layout_marginTop="@dimen/normal_text_padding"
        android:layout_marginBottom="@dimen/normal_text_padding"
        android:gravity="center|right"/>

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/normal_text_padding"
        android:layout_marginBottom="@dimen/normal_text_padding"
        android:gravity="center" />
</LinearLayout>