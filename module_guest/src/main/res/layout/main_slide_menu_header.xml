<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:ignore="MissingPrefix">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/normal_padding_margin"
        android:background="@drawable/circle">

        <ImageButton
            android:id="@+id/takeAvatarBtn"
            android:layout_width="@dimen/user_avatar_icon_width"
            android:layout_height="@dimen/user_avatar_icon_height"
            android:layout_gravity="center|right"
            android:layout_margin="@dimen/avartar_image_padding"
            android:background="@android:color/transparent"
            android:scaleType="fitXY" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/image_logo_nav" />

        <TextView
            android:id="@+id/versionInfo"
            fontPath="@string/font_family_3"
            android:padding="@dimen/text_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/f1"
            android:gravity="center"
            android:textColor="@color/c1_1" />
    </LinearLayout>
</LinearLayout>